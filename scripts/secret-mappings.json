{
  "secrets": [
    {
      "name": "postgres_password",
      "envFile": "apps/api/.env",
      "envVar": "DATABASE_PASSWORD",
      "optional": false,
      "description": "PostgreSQL database password (same as API database password)"
    },
    {
      "name": "cloudflare_tunnel_token",
      "envFile": ".env",
      "envVar": "CLOUDFLARE_TUNNEL_TOKEN",
      "optional": false,
      "description": "Cloudflare Tunnel token for secure public access"
    },
    {
      "name": "api_frontend_url",
      "envFile": "apps/api/.env",
      "envVar": "FRONTEND_URL",
      "optional": false,
      "description": "Frontend URL for CORS configuration"
    },
    {
      "name": "api_database_password",
      "envFile": "apps/api/.env",
      "envVar": "DATABASE_PASSWORD",
      "optional": false,
      "description": "API database password"
    },
    {
      "name": "ui_vite_api_url",
      "envFile": "apps/ui/.env",
      "envVar": "VITE_API_URL",
      "optional": false,
      "description": "API URL for UI frontend"
    },
    {
      "name": "scheduler_database_password",
      "envFile": "apps/scheduler/.env",
      "envVar": "DATABASE_PASSWORD",
      "optional": false,
      "description": "Scheduler database password"
    },
    {
      "name": "scraper_database_password",
      "envFile": "apps/scraper/.env",
      "envVar": "DATABASE_PASSWORD",
      "optional": false,
      "description": "Scraper database password"
    },
    {
      "name": "scraper_webshare_username",
      "envFile": "apps/scraper/.env",
      "envVar": "WEBSHARE_USERNAME",
      "optional": false,
      "description": "Webshare proxy username"
    },
    {
      "name": "scraper_webshare_password",
      "envFile": "apps/scraper/.env",
      "envVar": "WEBSHARE_PASSWORD",
      "optional": false,
      "description": "Webshare proxy password"
    }
  ]
}
